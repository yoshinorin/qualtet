<configuration>

    <!--
    <property name="QUALTET_ENV" value="${QUALTET_ENV}" />
    -->

    <appender name="APPLICATION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${application.home:-.}/logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with compression -->
            <fileNamePattern>${application.home:-.}/logs/application.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- keep 30 days worth of history -->
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} [%level] from %logger - %message%n%xException</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>DENY</onMatch>
        </filter>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} [%level] from %logger - %message%n%xException</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>DENY</onMatch>
        </filter>
    </appender>

    <!-- NOTE
         Is the if-condition with env variables not working???
         Anyway no-need `debug.log` evenif in the development.
    <if condition='property("QUALTET_ENV").contains("dev")'>
        <appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${application.home:-.}/logs/debug.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${application.home:-.}/logs/debug.%d{yyyy-MM-dd}.gz</fileNamePattern>
                <maxHistory>7</maxHistory>
                <cleanHistoryOnStart>true</cleanHistoryOnStart>
            </rollingPolicy>
            <encoder>
                <charset>UTF-8</charset>
                <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} %message%n</pattern>
                <immediateFlush>false</immediateFlush>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>DEBUG</level>
            </filter>
        </appender>
    </if>
    -->

    <logger name="error" level="ERROR" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="APPLICATION_FILE" />
    </logger>

    <logger name="info" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="APPLICATION_FILE" />
    </logger>

    <logger name="debug" level="DEBUG" additivity="false">
        <appender-ref ref="DEBUG_FILE" />
    </logger>

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="APPLICATION_FILE"/>
    </root>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="APPLICATION_FILE"/>
    </root>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="APPLICATION_FILE"/>
        <appender-ref ref="DEBUG_FILE"/>
    </root>
</configuration>
